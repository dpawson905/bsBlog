<div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <a class="nav-link <%= typeof url !== 'undefined' && url === 'home' ? 'active animated bounce' : '' %>" href="/">Home</a>
    </li>
  <% if(currentUser && isAuthenticated) { %>
    <li class="nav-item">
      <a class="nav-link <%= typeof url !== 'undefined' && url === 'blogs' ? 'active animated bounce' : '' %>" href="#">View Your Blogs</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= typeof url !== 'undefined' && url === 'new' ? 'active animated bounce' : '' %>" href="#">New Blog</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= typeof url !== 'undefined' && url === 'profile' ? 'active animated bounce' : '' %>" href="/users/user/<%= currentUser._id %>">
        <img class="small-img img-fluid" src="<%= currentUser.image.secure_url %>" alt="<%= currentUser.username %>"> Profile
      </a>
    </li>
  </ul>
  <form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item">
      <a class="nav-link active" href="users/logout">Logout</a>
    </li>
  </ul>
  <% } else { %>
  <li class="nav-item">
    <a class="nav-link <%= typeof url !== 'undefined' && url === 'register' ? 'active animated bounce' : '' %>" href="/users/register">Register</a>
  </li>
  <li class="nav-item">
    <a class="nav-link link-fix" data-toggle="modal" data-target="#forgotPwModal">Forgot Password</a>
  </li>
  </ul>
  <form action="/users/login" method="post" class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2 m-fix" type="text" name="username" placeholder="Username" aria-label="Username">
    <input class="form-control mr-sm-2" type="password" name="password" placeholder="Password" aria-label="Password">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login</button>
  </form>
  <% } %>
</div>
